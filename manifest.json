{
  "manifest_version": 3,
  "name": "Gmail Orchestrator",
  "version": "1.1",
  "description": "Automates email verification in Gmail",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["https://mail.google.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["https://mail.google.com/*"],
    "js": ["content.js"]
  }],
  "action": {
    "default_title": "Check mail now"
  }
}
